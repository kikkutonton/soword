<% provide(:title, @user.name) %>
<div class = "row">
  <aside class = "col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= link_to "New word", new_path, class: "btn btn-lg btn-primary" %>
    </section>
  </aside>
    <div class="col-md-8">
      <% if @user.vocabularies.any? %>
        <div class="row">
          <div class="col-md-4">
            <h3>Vocabulary (<%= @user.vocabularies.count %>)</h3>
          </div>
          <div class="search_form">
            <%= render 'shared/vocabularies_search_form' %>
          </div>
        </div>
        <ol class="vocabularies">
          <%= render @vocabularies %>
        </ol>
        <%= will_paginate @vocabularies %>
      <% end %>
    </div>
</div>
