<% provide(:title, "Edit") %>
<h1>Update word</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@vocabulary, url: edit_vocabulary_path(params[:id])) do |f| %>
      <%= render 'vocabularies/error_messages' %>

      <%= f.label :word %>
      <%= f.text_field :word, class: 'form-control' %>

      <%= f.label :meaning %>
      <%= f.text_field :meaning, class: 'form-control' %>

      <%= f.label :similarity %>
      <%= f.text_field :similarity, class: 'form-control' %>

      <%= f.label :example %>
      <%= f.text_field :example, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>